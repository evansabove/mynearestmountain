/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 800px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

p
  line-height 1.8

.mapframe div#map
  width 800px
  height 600px
  padding-top 50px
  
#map img
  max-width none

input#destination
  width 800px
  padding 12px 20px
  margin 8px 0
  box-sizing border-box

input#find
  background-color #4CAF50
  border none
  color white
  padding 16px 32px
  text-decoration none
  margin 4px 2px
  cursor pointer